@model IEnumerable<MariosMarketplace.Models.Product>

@{
    ViewData["Title"] = "Mario's Marketplace ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Product List</h2>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.CountryOrigin)</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var product in Model)
        {
            <tr>
                <td>@Html.DisplayFor(model => product.Name)</td>
                <td>@Html.DisplayFor(model => product.Price)</td>
                <td>@Html.DisplayFor(model => product.CountryOrigin)</td>
            </tr>
        }
    </tbody>
</table>